FROM nvcr.io/nvidia/cuda:12.8.1-cudnn-devel-ubuntu24.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-venv \
    git \
    libopenmpi-dev \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Create and activate virtual environment
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Align C++ ABI for PyTorch and trt-llm
ENV CXXFLAGS="-D_GLIBCXX_USE_CXX11_ABI=0"

# Install all extras
WORKDIR /workspace
RUN --mount=type=bind,source=setup.py,target=/workspace/setup.py \
    --mount=type=bind,source=nemo_export_deploy/__init__.py,target=/workspace/nemo_export_deploy/__init__.py \
    --mount=type=bind,source=nemo_export_deploy/package_info.py,target=/workspace/nemo_export_deploy/package_info.py \
    --mount=type=bind,source=README.md,target=/workspace/README.md \
    --mount=type=bind,source=requirements,target=/workspace/requirements \
    pip install --no-build-isolation --no-cache-dir '.[all]'

# Set PYTHONPATH
ENV PYTHONPATH=/workspace

# Install development versions
RUN pip install --no-cache-dir --upgrade \
    git+https://github.com/NVIDIA/Megatron-LM.git \
    git+https://github.com/NVIDIA/NeMo-Run.git

